
<div class="dashboard">
    <h1 class="dashboard__title"><%= test.name %></h1>
    <div class="dashboard__content">
        <div class="dashboard__chart">
            <canvas id="myChart"></canvas>
        </div>
        <div class="dashboard__info">
            <h2>Additional Information</h2>
            <p><%= test.additionalInfo %></p>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    window.onload = function() {
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: <%- JSON.stringify(test.labels) %>,
                datasets: [{
                    data: <%- JSON.stringify(test.pieChartData) %>,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });
    };
</script>